<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecepie">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical">
        <EditText
            android:id="@+id/imageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="Image URL"/>

        <EditText
            android:id="@+id/recepieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="Recepie Name"/>

        <EditText
            android:id="@+id/recepieMakingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="Recepie Making Time"/>

        <EditText
            android:id="@+id/recepieServings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="Recepie Servings"/>

        <EditText
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="Url"/>

        <ListView
            android:id="@+id/list_view_ingredients_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="75"
            android:choiceMode="multipleChoice"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/AddRecepieBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Add Recepie"
            android:onClick="onAddRecepie"
            android:textSize="36sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>